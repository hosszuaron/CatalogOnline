@page
@model OnlineCatalog.Pages.Students.DeleteModel

@{
    ViewData["Title"] = "Stergere student";
}

<h1>Atentie!</h1>

<h3>Sunteti sigur ca doriti sa stergeti acest student?</h3>
<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.NrMatricol)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.NrMatricol)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Specialization)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Specialization.SpecializationID)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Student.StudentID" />
        <input type="submit" value="Sterge" class="btn btn-danger" />
        <a class="btn btn-warning" role="button" asp-page="./Index">Inapoi</a>
    </form>
</div>
