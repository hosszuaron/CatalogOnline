@page
@model OnlineCatalog.Pages.Grades.EditModel

@{
    ViewData["Title"] = "Editare Nota";
}

<h4>Editare Nota</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Grade.GradeID" />
            <div class="form-group">
                <label asp-for="Grade.GradeValue" class="control-label"></label>
                <input asp-for="Grade.GradeValue" class="form-control" />
                <span asp-validation-for="Grade.GradeValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grade.StudentID" class="control-label"></label>
                <select asp-for="Grade.StudentID" class="form-control" asp-items="ViewBag.StudentID">
                    <option selected>Alege...</option>
                </select>
                <span asp-validation-for="Grade.StudentID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Salveaza" class="btn btn-primary" />
                <a class="btn btn-warning" role="button" asp-page="./Index">Inapoi</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
