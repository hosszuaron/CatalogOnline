@page
@model OnlineCatalog.Pages.Specializations.DeleteModel

@{
    ViewData["Title"] = "Stergere specializare";
}

<h1>Atentie!</h1>

<h3>Sunteti sigur ca doriti sa stergeti aceasta specializare?</h3>
<div>
    <h4>Specializare</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Specialization.SpecializationName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Specialization.SpecializationName)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Specialization.SpecializationID" />
        <input type="submit" value="Sterge" class="btn btn-danger" />
        <a class="btn btn-warning" role="button" asp-page="./Index">Inapoi</a>
    </form>
</div>
